        <file src="bin/Release/net9.0/linux-x64/WebviewGtk.dll" target="lib/net9.0/"/>
        <file src="bin/Release/net9.0/linux-x64/WebviewGtk.pdb" target="lib/net9.0/"/>
    </files>
</package>